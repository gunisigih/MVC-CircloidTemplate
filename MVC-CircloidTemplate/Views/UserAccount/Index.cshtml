
@{
    ViewBag.Title = "Kullanıcı Listesi";
}

@model MembershipUserCollection

<div class="row">
    <div class="col-md-12 col-sd-12 col-lg-12">
        <div class="block">
            <div class="block-heading">
                <div class="main-text h2">
                    Kullanıcılar Listesi
                </div>
                <div class="block-controls">
                    <span aria-hidden="true" class="icon icon-arrow-down icon-size-medium block-control-collapse"></span>
                    <a href="/UserAccount/AddUserAccount" class="btn btn-success" role="button">Kullanıcı Ekle</a>
                </div>
            </div>
            <div class="block-content-outer">
                <div class="block-content-inner">
                    <table class="table table-striped table-hover">
                        <thead>
                            <tr>
                                <th>Kullanıcı Adı</th>
                                <th>Email</th>
                                <th>Kayıt Tarihi</th>
                                <th>Son Giriş Tarihi</th>
                                <th>Sil</th>
                                
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (MembershipUser mu in Model)
                            {
                                <tr>
                                    <td>@mu.UserName</td>
                                    <td>@mu.Email</td>
                                    <td>@mu.CreationDate</td>
                                    <td>@mu.LastLoginDate</td>
                                    <td><a href="#" class="btn btn-danger rounded muSil" data-muUserName="@mu.UserName">Sor&Sil</a></td>


                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>



